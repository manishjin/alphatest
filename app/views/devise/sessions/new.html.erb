<body id="page-top" class="index">
    <header id="landingheader">
        <div class="container">
            <div class="intro-img">
            <%= link_to root_path, :title => 'Inicio', :rel => 'tooltip' do %>
            <span> <%= image_tag("ClearLogo.png", class: "img-responsive", height: '50%', width: '50%', alt: "TRANSWIZ") %> </span>
            <% end %>
            </div>

          <div class="col-lg-12 text-center">
            <h2 class="section-heading">Log In</h2>
          </div>
          <div class="row text-center" >
            <div class="col-lg-6 col-lg-offset-3">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, :style => "color: #000;" %>
                </div>

                <div class="form-group">
                  <%= f.label :password %><br />
                  <%= f.password_field :password, autocomplete: "off", :style => "color: #000;" %>
                </div>

                <% if devise_mapping.rememberable? -%>
                  <div class="form-group">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>

                <div class="actions">
                  <%= f.submit "Log in", :class => "page-scroll btn btn-primary" %>
                </div>
              <% end %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
    </header>

