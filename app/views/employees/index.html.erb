<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Shipments</title>
    <%= stylesheet_link_tag 'footable.bootstrap.min', media: 'all' %>
    <%= stylesheet_link_tag 'sidebarcustom', media: 'all' %>
    <%= stylesheet_link_tag 'themecustom', media: 'all' %>
    <%= stylesheet_link_tag 'custom', media: 'all' %>
</head>
<body id="page-top" class="index">
  <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <%= render "shared/customsidebar" %>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper ">
    <!-- Navigation -->
    <!-- Header -->
            <header id="customheader">
                <div class="container-fluid">
                    <h5 style="text-align:left"><a href="#menu-toggle" id="menu-toggle">Mostrar/Ocultar Menú</a></h5>
                    <div class="intro-text">
                        <div class="intro-heading">ARAGONÉS TRANSPORTS</div>
                        <a href="<%= new_company_employee_path %>" class="page-scroll btn btn-med">Crear Empleado</a>
                    </div>
                </div>
            </header>

            <!-- Services Section -->
            <section id="manage">
                <div class="container table-responsive">
                  <table class="table table-striped table-bordered" data-paging="true" data-filtering="true" data-sorting="true">
                    <thead>
                      <tr>
                        <th>Nombre</th>
                        <th>Apellidos</th>
                        <th>Teléfono</th>
                        <th>Designación</th>
                        <th data-breakpoints="xs sm md lg">Empresa</th>
                        <th data-breakpoints="xs sm md lg">E-mail</th>
                        <th data-breakpoints="xs sm md lg">Número de Seguridad Social</th>
                        <th data-breakpoints="xs sm md lg">Nacionalidad</th>
                      </tr>
                    </thead>
                    
                    <tbody>
                    <% @employees.each do |employee| %>
                      <tr>
                        <td><%= employee.First_Name %></td>
                        <td><%= employee.Last_Name %></td>
                        <td><%= employee.Telephone %></td>
                        <td><%= employee.Designation %></td>
                        <td><%= employee.company_id %></td>
                        <td><%= employee.Email %></td>
                        <td><%= employee.Social_Sec %></td>
                        <td><%= employee.Country %></td>
                      </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
            </section>
        </div>
 </div>   
    <!-- Plugin JavaScript -->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

    <!-- Theme JavaScript -->
    <%= javascript_include_tag "agency.js" %>
    <%= javascript_include_tag "footable.js" %>
<!-- 
   <script src="/assets/agency.js"></script>
    <script src="/assets/footable.js" type="text/javascript"></script>
 -->
</body>
  <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
<script type="text/javascript">
  jQuery(function($){
    $('.table').footable();
  });
</script>
</html>
