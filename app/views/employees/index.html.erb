<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Shipments</title>
    <link href="/assets/sidebarcustom.scss" rel="stylesheet">
    <link href="/assets/themecustom.scss" rel="stylesheet">
    <link href="/assets/custom.scss" rel="stylesheet">
    <link href="/assets/footable.bootstrap.min.css" rel="stylesheet">
</head>
<body id="page-top" class="index">
  <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <%= render "shared/customsidebar" %>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper ">
    <!-- Navigation -->
    <!-- Header -->
    <header id="customheader">
        <div class="container-fluid">
        <h5 style="text-align:left"><a href="#menu-toggle" id="menu-toggle">Show/Hide Menu</a></h5>
            <div class="intro-text">
                <div class="intro-lead-in">Welcome To TRANSWIZ</div>
                <div class="intro-heading">Manage, track, and communicate with your shipments</div>
                <a href="#manage" class="page-scroll btn btn-xl">Manage Employees</a>
                <a href="#create" class="page-scroll btn btn-xl">Add Employees</a>
            </div>
        </div>
    </header>

    <!-- Services Section -->
    <section id="manage">
        <div class="container table-responsive">
          <table class="table table-striped table-bordered" data-paging="true" data-filtering="true" data-sorting="true">
            <thead>
              <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Telephone</th>
                <th>Designation</th>
                <th data-breakpoints="xs sm md lg">Company</th>
                <th data-breakpoints="xs sm md lg">Email</th>
                <th data-breakpoints="xs sm md lg">Social Security No</th>
                <th data-breakpoints="xs sm md lg">Country</th>
              </tr>
            </thead>
            
            <tbody>
            <% @employees.each do |employee| %>
              <tr>
                <td><%= employee.First_Name %></td>
                <td><%= employee.Last_Name %></td>
                <td><%= employee.Telephone %></td>
                <td><%= employee.Designation %></td>
                <td><%= employee.company_id %></td>
                <td><%= employee.Email %></td>
                <td><%= employee.Social_Sec %></td>
                <td><%= employee.Country %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
    </section>

    <!-- About Section -->
    <section id="create">
        <div class="container">
          <h3> This is about section. We will show create form here</h3>
          <%= link_to 'New Employee', new_company_employee_path %>
        </div>
    </section>
    </div>
 </div>   
    <!-- Plugin JavaScript -->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

    <!-- Theme JavaScript -->
    <script src="/assets/agency.js"></script>
    <script src="/assets/footable.js" type="text/javascript"></script>

</body>
  <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
<script type="text/javascript">
  jQuery(function($){
    $('.table').footable();
  });
</script>
</html>
