<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">¿Necesita ayudar?</h2>
            <h5 class="section-subheading">Deja un mensaje y nos pondremos en contacto contigo</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <%= form_for(@enquiry, remote:true) do |e| %>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="form-group">
                            <div class="form-group">
                                <%= e.text_field :Name, class: "form-control", placeholder: "Nombre de la empresa *", :required => true %> 
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <%= e.email_field :Email, class: "form-control", placeholder: "Correo electrónico *", :required => true %> 
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <%= e.number_field :Telephone, class: "form-control", placeholder: "Número de teléfono *", :required => true, :title => "Por favor, introduzca su número de teléfono." %> 
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <%= e.text_area :Message, class: "form-control", placeholder: "Mensaje *", :required => true %> 
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="clearfix">
                        </div>
                        <div class="col-md-4 col-md-offset-4 text-center">
                            <div id="success"></div>
                            <button type="submit" class="btn btn-med">ENVIAR</button>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>

<%= javascript_include_tag "jqBootstrapValidation.js" %>
<%= javascript_include_tag "contact_me.js" %>
<%= javascript_include_tag "agency.js" %> 