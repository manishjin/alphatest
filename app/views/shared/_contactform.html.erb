<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">¿Quieres ayudar?</h2>
            <h5 class="section-subheading" style="color:#fff">Deja tus datos y nos pondremos en contacto contigo</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <form name="sentMessage" id="contactForm" novalidate>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Nombre de la empresa *" id="name" required data-validation-required-message="Por favor, escriba su nombre.">
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Correo electrónico *" id="email" required data-validation-required-message="Por favor, introduzca su dirección de correo electrónico.">
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="form-group">
                            <input type="tel" class="form-control" placeholder="Número de teléfono *" id="phone" required data-validation-required-message="Por favor, introduzca su número de teléfono.">
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Mensaje *" id="message" required data-validation-required-message="Por favor, introduzca un mensaje.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                <div class="clearfix">
                </div>
                <div class="col-md-4 col-md-offset-4 text-center">
                    <div id="success">
                    </div>
                    <button type="submit" class="btn btn-med">ENVIAR</button>
                </div>
                </div>
            </form>
        </div>
    </div>
</div>

<%= javascript_include_tag "jqBootstrapValidation.js" %>
<%= javascript_include_tag "contact_me.js" %>
<%= javascript_include_tag "agency.js" %> 