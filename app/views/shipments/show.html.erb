<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>View Shipment Details</title>
</head>

<body>
  <div id="wrapper">
    <div id="page-wrapper">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">
            <h1 class="page-header">Shipment Details</h1>
          </div>
        </div>
        <div class="row">
              <p id="notice"><%= notice %></p>
          <div class="col-lg-6">
              <p>
                <strong>Sub shipment:</strong>
                <%= @shipment.Sub_Shipment %>
              </p>

              <p>
                <strong>Parent shipment id:</strong>
                <%= @shipment.Parent_Shipment_ID %>
              </p>

              <p>
                <strong>Status:</strong>
                <%= @shipment.Status %>
              </p>

              <p>
                <strong>Client id:</strong>
                <%= @shipment.Client_ID %>
              </p>

              <p>
                <strong>Client name:</strong>
                <%= @shipment.Client_Name %>
              </p>

              <p>
                <strong>Pickup location:</strong>
                <%= @shipment.Pickup_Location %>
              </p>

              <p>
                <strong>Pickup date:</strong>
                <%= @shipment.Pickup_Date %>
              </p>

              <p>
                <strong>Pickup start time:</strong>
                <%= @shipment.Pickup_Start_Time %>
              </p>

              <p>
                <strong>Pickup end time:</strong>
                <%= @shipment.Pickup_End_Time %>
              </p>

              <p>
                <strong>Pickup gate:</strong>
                <%= @shipment.Pickup_Gate %>
              </p>

              <p>
                <strong>Pickup contact person:</strong>
                <%= @shipment.Pickup_Contact_Person %>
              </p>

              <p>
                <strong>Pickup contact no:</strong>
                <%= @shipment.Pickup_Contact_No %>
              </p>
          </div>
          <div class="col-lg-6"> 
              <p>
                <strong>Weight:</strong>
                <%= @shipment.Weight %>
              </p>

              <p>
                <strong>Palletized:</strong>
                <%= @shipment.Palletized %>
              </p>

              <p>
                <strong>No of pallets:</strong>
                <%= @shipment.No_of_Pallets %>
              </p>

              <p>
                <strong>Dropoff location:</strong>
                <%= @shipment.Dropoff_Location %>
              </p>

              <p>
                <strong>Dropoff date:</strong>
                <%= @shipment.Dropoff_Date %>
              </p>

              <p>
                <strong>Dropoff start time:</strong>
                <%= @shipment.Dropoff_Start_Time %>
              </p>

              <p>
                <strong>Dropff end time:</strong>
                <%= @shipment.Dropff_End_Time %>
              </p>

              <p>
                <strong>Dropoff gate:</strong>
                <%= @shipment.Dropoff_Gate %>
              </p>

              <p>
                <strong>Dropoff contact person:</strong>
                <%= @shipment.Dropoff_Contact_Person %>
              </p>

              <p>
                <strong>Dropff contact no:</strong>
                <%= @shipment.Dropff_Contact_No %>
              </p>

              <p>
                <strong>Comments:</strong>
                <%= @shipment.Comments %>
              </p>

              <p>
                <strong>Cargo type:</strong>
                <%= @shipment.Cargo_Type %>
              </p>

              <%= link_to 'Edit', edit_company_shipment_path(@company,@shipment) %> |
              <%= link_to 'Back', company_shipments_path(@company) %>
          </div>
        </div>
        <div class="row">
        <form role="form">
          <div class="col-lg-6">
            <div class="form-group">
              <textarea class="form-control" rows="3" placeholder="Enter message to send" name="mesg" id="msg1">Message</textarea>
              <%= link_to "Send Message" , message_company_shipment_path(@company,@shipment, mesg: "<b>Shipment Location:</b> Barcelona\n <b>Shipment Delivery</b>: Madrid\n <b>Something else</b>: ok"), method: :post %>
              <%= button_to "Send Message" , message_company_shipment_path(@company,@shipment, mesg: "test") %>
            </div>
          </div>
        </form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>