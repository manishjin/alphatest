<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Shipments</title>
    <%= stylesheet_link_tag 'footable.bootstrap.min', media: 'all' %>
    <%= stylesheet_link_tag 'sidebarcustom', media: 'all' %>
    <%= stylesheet_link_tag 'themecustom', media: 'all' %>
    <%= stylesheet_link_tag 'custom', media: 'all' %>

    <!-- Footable JS -->
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body id="page-top" class="index">
  <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <%= render "shared/customsidebar" %>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper ">
    <!-- Navigation -->
    <!-- Header -->
            <header id="customheader">
                <div class="container-fluid">
                <h5 style="text-align:left"><a href="#menu-toggle" id="menu-toggle">Show/Hide Menu</a></h5>
                    <div class="intro-text">
                        <div class="intro-heading">ARAGONÃ‰S TRANSPORTS</div>
                        <a href="<%= new_company_shipment_path %>" class="page-scroll btn btn-med">Create Shipment</a>
                    </div>
                </div>
            </header>

            <!-- Services Section -->
            <section id="manage">
                <div class="container table-responsive">
                  <table class="table table-striped table-bordered" data-paging="true" data-filtering="true" data-sorting="true">
                    <thead>
                      <tr>
                        <th>Status</th>
                        <th>Client Name</th>
                        <th>Pickup date</th>
                        <th>Dropoff date</th>
                        <th data-breakpoints="xs sm md lg">Weight</th>
                        <th data-breakpoints="xs sm md lg">Pickup location</th>
                        <th data-breakpoints="xs sm md lg">Pickup Time</th>
                        <th data-breakpoints="xs sm md lg">Pickup Contact Person</th>
                        <th data-breakpoints="xs sm md lg">Pickup Contact Number</th>
                        <th data-breakpoints="xs sm md lg">Dropoff location</th>
                        <th data-breakpoints="xs sm md lg">Dropoff Time</th>
                        <th data-breakpoints="xs sm md lg">Dropoff Contact Person</th>
                        <th data-breakpoints="xs sm md lg">Dropoff Contact Number</th>
                        <th data-breakpoints="xs sm md lg">Palletized</th>
                        <th data-breakpoints="xs sm md lg">No of Pallets</th>
                        <th data-breakpoints="xs sm md lg">Cargo Type</th>
                        <th data-breakpoints="xs sm md lg">Company</th>
                      </tr>
                    </thead>
                    
                    <tbody>
                    <% @shipments.each do |shipment| %>
                      <tr>
                        <td><%= shipment.Status %></td>
                        <td><%= shipment.Client_Name %></td>
                        <td><%= shipment.Pickup_Date %></td>
                        <td><%= shipment.Dropoff_Date %></td>
                        <td><%= shipment.Weight %></td>
                        <td><%= shipment.Pickup_Location %></td>
                        <td><%= shipment.Pickup_Start_Time %></td>
                        <td><%= shipment.Pickup_Contact_Person %></td>
                        <td><%= shipment.Pickup_Contact_No %></td>
                        <td><%= shipment.Dropoff_Location %></td>
                        <td><%= shipment.Dropoff_Start_Time %></td>
                        <td><%= shipment.Dropoff_Contact_Person %></td>
                        <td><%= shipment.Dropff_Contact_No %></td>
                        <td><%= shipment.Palletized %></td>
                        <td><%= shipment.No_of_Pallets %></td>
                        <td><%= shipment.Cargo_Type %></td>
                        <td><%= shipment.company_id %></td>
                      </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
            </section>
        </div>
 </div>   
    <!-- Plugin JavaScript -->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

    <!-- Theme JavaScript -->
    <%= javascript_include_tag "agency.js" %>
    <%= javascript_include_tag "footable.js" %>
<!-- 
    <script src="/assets/agency.js"></script>
    <script src="/assets/footable.js" type="text/javascript"></script>
 -->
</body>
  <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
<script type="text/javascript">
  jQuery(function($){
    $('.table').footable();
  });
</script>
</html>
