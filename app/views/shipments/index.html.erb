<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Shipments</title>
    <%= stylesheet_link_tag 'footable.bootstrap.min', media: 'all' %>
    <%= stylesheet_link_tag 'sidebarcustom', media: 'all' %>
    <%= stylesheet_link_tag 'themecustom', media: 'all' %>
    <%= stylesheet_link_tag 'custom', media: 'all' %>

    <!-- Footable JS -->
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body id="page-top" class="index">
  <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <%= render "shared/customsidebar" %>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper ">
    <!-- Navigation -->
    <!-- Header -->
            <header id="customheader">
                <div class="container-fluid">
                <h5 style="text-align:left"><a href="#menu-toggle" id="menu-toggle">Mostrar/Ocultar Menú</a></h5>
                    <div class="intro-text">
                        <div class="intro-heading"><%= @company.Name %></div>
                        <a href="<%= new_company_shipment_path %>" class="page-scroll btn btn-med">Crear Envío</a>
                    </div>
                </div>
            </header>

            <!-- Services Section -->
            <section id="manage">
                <div class="container-fluid">
                  <table class="table table-striped table-bordered" data-paging="true" data-filtering="true" data-sorting="true">
                    <thead>
                      <tr>
                        <th>Estado</th>
                        <th>Nombre del Cliente</th>
                        <th data-breakpoints="xs sm md">Fecha de Recogida</th>
                        <th data-breakpoints="xs sm md lg">Fecha de Entrega</th>
                        <th data-breakpoints="xs sm md lg">Peso</th>
                        <th data-breakpoints="xs sm md lg">Dirección de Recogida</th>
                        <th data-breakpoints="xs sm md lg">Hora de Recogida</th>
                        <th data-breakpoints="xs sm md lg">Nombre de Contacto en Recogida</th>
                        <th data-breakpoints="xs sm md lg">Número de Contacto en Recogida</th>
                        <th data-breakpoints="xs sm md lg">Dirección de Entrega</th>
                        <th data-breakpoints="xs sm md lg">Hora de Entrega</th>
                        <th data-breakpoints="xs sm md lg">Nombre de Contacto en Entrega</th>
                        <th data-breakpoints="xs sm md lg">Número de Contacto en Entrega</th>
                        <th data-breakpoints="xs sm md lg">Paletizado</th>
                        <th data-breakpoints="xs sm md lg">Número de palets</th>
                        <th data-breakpoints="xs sm md lg">Tipo de carga</th>
                        <th data-breakpoints="xs sm md lg">Empresa</th>
                        <th data-breakpoints="xs sm md lg">Tipo de vehículo</th>
                        <th data-breakpoints="xs sm md lg">Asignado a</th>
                        <th data-breakpoints="xs sm md lg">ID de la empresa</th>
                        <th data-breakpoints="xs sm md lg">ID del transportista</th>
                        <th data-breakpoints="xs sm md lg">Persona de contacto</th>
                        <th data-breakpoints="xs sm md lg">Número de contacto</th>
                        <th data-type="html"></th>
                      </tr>
                    </thead>
                    
                    <tbody>
                    <% @shipments.each do |shipment| %>
                      <tr>
                        <td><%= shipment.Status %></td>
                        <td><%= shipment.Client_Name %></td>
                        <td><%= shipment.Pickup_Date %></td>
                        <td><%= shipment.Dropoff_Date %></td>
                        <td><%= shipment.Weight %></td>
                        <td><%= shipment.Pickup_Location %></td>
                        <td><%= shipment.Pickup_Start_Time %></td>
                        <td><%= shipment.Pickup_Contact_Person %></td>
                        <td><%= shipment.Pickup_Contact_No %></td>
                        <td><%= shipment.Dropoff_Location %></td>
                        <td><%= shipment.Dropoff_Start_Time %></td>
                        <td><%= shipment.Dropoff_Contact_Person %></td>
                        <td><%= shipment.Dropff_Contact_No %></td>
                        <td><%= shipment.Palletized %></td>
                        <td><%= shipment.No_of_Pallets %></td>
                        <td><%= shipment.Cargo_Type %></td>
                        <td><%= shipment.company_id %></td>
                        <td><%= shipment.Allocated_Truck_Type %></td>
                        <td><%= shipment.Assigned_To %></td>
                        <td><%= shipment.Allocated_Company_ID %></td>
                        <td><%= shipment.Driver_ID %></td>
                        <td><%= shipment.Allocated_Contact_Person %></td>
                        <td><%= shipment.Allocated_Contact_No %></td>
                        <td class="text-center" style="max-width:70px">
                            <%= link_to edit_company_shipment_path(@company,shipment,anchor:"allocdetails"), :title => 'Asignar', :rel => 'tooltip' do %>
                            <span class="glyphicon glyphicon-paste" style="padding-right:10px"></span>
                            <% end %>
                            <%= link_to edit_company_shipment_path(@company,shipment), :title => 'Editar', :rel => 'tooltip' do %>
                            <span class="glyphicon glyphicon-edit" style="padding-right:10px"></span>
                            <% end %>
                            <%= link_to company_shipment_path(@company,shipment), :title => 'Mensaje', :rel => 'tooltip' do %>
                            <span class="glyphicon glyphicon-comment" style="padding-right:10px"></span>
                            <% end %>
                            <%= link_to company_shipment_path(@company,shipment), :title => 'Borrar', :rel => 'tooltip', method: :delete, data: { confirm: "¿Estás seguro?" } do %>
                            <span class="glyphicon glyphicon-trash" style="padding-right:5px"></span>
                            <% end %>
                        </td>
                      </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
            </section>
        </div>
 </div>   
    <!-- Plugin JavaScript -->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

    <!-- Theme JavaScript -->
    <%= javascript_include_tag "agency.js" %>
    <%= javascript_include_tag "footable.js" %>
<!-- 
    <script src="/assets/agency.js"></script>
    <script src="/assets/footable.js" type="text/javascript"></script>
 -->


</body>
  <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
<script type="text/javascript">
  jQuery(function($){
    $('.table').footable();
  });
</script>
</html>
