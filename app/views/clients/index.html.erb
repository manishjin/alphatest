<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Shipments</title>
    <%= stylesheet_link_tag 'footable.bootstrap.min', media: 'all' %>
    <%= stylesheet_link_tag 'sidebarcustom', media: 'all' %>
    <%= stylesheet_link_tag 'themecustom', media: 'all' %>
    <%= stylesheet_link_tag 'custom', media: 'all' %>
 
</head>
<body id="page-top" class="index">
  <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <%= render "shared/customsidebar" %>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper ">
    <!-- Navigation -->
    <!-- Header -->
            <header id="customheader">
                <div class="container-fluid">
                <h5 style="text-align:left"><a href="#menu-toggle" id="menu-toggle">Mostrar/Ocultar Menú</a></h5>
                    <div class="intro-text">
                        <div class="intro-heading"><%= @company.Name %></div>
                        <a href="<%= new_company_client_path %>" class="page-scroll btn btn-med">Añadir Cliente</a>
                    </div>
                </div>
            </header>

            <!-- Services Section -->
            <section id="manage">
                <div class="container table-responsive">
                  <table class="table table-striped table-bordered" data-paging="true" data-filtering="true" data-sorting="true">
                    <thead>
                      <tr>
                        <th>Nombre</th>
                        <th>Dirección</th>
                        <th data-breakpoints="xs sm md lg">Tipo</th>
                        <th data-breakpoints="xs sm md lg">Dirección de facturación</th>
                        <th data-breakpoints="xs sm md lg">NIF</th>
                        <th data-breakpoints="xs sm md lg">Verificado</th>
                        <th data-type="html"></th>
                      </tr>
                    </thead>
                    
                    <tbody>
                    <% @clients.each do |client| %>
                      <tr>
                        <td><%= client.Name %></td>
                        <td><%= client.Address %></td>
                        <td><%= client.Type %></td>
                        <td><%= client.Billing_Address %></td>
                        <td><%= client.NIF %></td>
                        <td><%= client.Verified %></td>
                        <td class="text-center" style="max-width:40px">
                            <%= link_to edit_company_client_path(@company,client), :title => 'Editar', :rel => 'tooltip' do %>
                            <span class="glyphicon glyphicon-edit" style="padding-right:10px"></span>
                            <% end %>
                            <%= link_to company_client_path(@company,client), :title => 'Borrar', :rel => 'tooltip', method: :delete, data: { confirm: "¿Estás seguro?" } do %>
                            <span class="glyphicon glyphicon-trash" style="padding-right:5px"></span>
                            <% end %>
                        </td>
                      </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
            </section>
        </div>
 </div>   
    <!-- Plugin JavaScript -->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

    <!-- Theme JavaScript -->
    <%= javascript_include_tag "agency.js" %>
    <%= javascript_include_tag "footable.js" %>

</body>
  <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
<script type="text/javascript">
  jQuery(function($){
    $('.table').footable();
  });
</script>
</html>
