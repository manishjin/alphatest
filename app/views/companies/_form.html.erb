<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Provide Company details
      </div>
      <div class="panel-body">
        <form role="form">
          <div class="row">
            <div class="col-lg-8 col-sm-8">
              <div class="form-group">
                <label>Name</label>
                <%= f.text_field :Name, class: "form-control" %>
              </div>
              <div class="form-group">
                <label>Address</label>
                <%= f.text_field :Address, class: "form-control" %>
              </div>
              <div class="form-group">
                  <label>NIF</label>
                  <%= f.text_field :NIF, class: "form-control" %>
              </div>
              <div class="form-group">
                  <label>CreatedBy</label>
                  <%= f.text_field :CreatedBy, class: "form-control" %>
              </div>
              <div class="form-group">
                  <label>UpdatedBy</label>
                  <%= f.text_field :UpdatedBy, class: "form-control" %>
              </div>
              <div class="actions">
                <%= f.submit %>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
