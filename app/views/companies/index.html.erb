    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body id="page-top" class="index">

    <!-- Navigation -->
    <nav id="mainNav" class="navbar navbar-default navbar-custom navbar-fixed-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand page-scroll" href="#page-top"> TRANSWIZ</a>
                <span class="navbar-brand page-scroll"><%= link_to 'Home', root_path %></span>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#manage">Manage Shipments</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#create">Create Shipment</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#contact">Contact</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
    <!-- Header -->
    <header>
        <div class="container">
            <div class="intro-text">
                <div class="intro-lead-in">Welcome To TRANSWIZ</div>
                <div class="intro-heading">Manage, track, and communicate with your shipments</div>
                <a href="#manage" class="page-scroll btn btn-xl">Manage Shipments</a>
                <a href="#create" class="page-scroll btn btn-xl">Create Shipments</a>
            </div>
        </div>
    </header>

    <!-- Services Section -->
    <section id="manage">
        <div class="container table-responsive">
          <table class="table table-striped table-bordered" data-paging="true" data-filtering="true" data-sorting="true">
            <thead>
              <tr>
                <th>Name</th>
                <th data-breakpoints="xs sm md">Address</th>
                <th data-breakpoints="xs sm md">Nif</th>
                <th data-breakpoints="xs sm md lg">Createdby</th>
                <th data-breakpoints="xs sm md lg">Updatedby</th>
                <th data-type="html" data-breakpoints="xs sm md lg">Show</th>
                <th data-type="html" data-breakpoints="xs sm md lg">Edit</th>
              </tr>
            </thead>
            
            <tbody>
            <% @companies.each do |comp| %>
              <tr>
                <td><%= comp.Name %></td>
                <td><%= comp.Address %></td>
                <td><%= comp.NIF %></td>
                <td><%= comp.CreatedBy %></td>
                <td><%= comp.UpdatedBy %></td>
                <td><%= link_to 'Shipments', company_shipments_path(comp) %></td>
                <td><%= link_to 'Details', company_path(comp) %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
    </section>

    <!-- About Section -->
    <section id="create">
        <div class="container">
<!--           <%= render 'blankform', :locals => {:company => @company} %> -->
        <%= link_to 'New Company', new_company_path %>
        </div>
    </section>
    

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <span class="copyright">Copyright &copy; Your Website 2016</span>
                </div>
                <div class="col-md-4">
<!--                     <ul class="list-inline social-buttons">
                        <li><a href="#"><i class="fa fa-twitter"></i></a>
                        </li>
                        <li><a href="#"><i class="fa fa-facebook"></i></a>
                        </li>
                        <li><a href="#"><i class="fa fa-linkedin"></i></a>
                        </li>
                    </ul>
 -->                </div>
                <div class="col-md-4">
                    <ul class="list-inline quicklinks">
                        <li><a href="#">Privacy Policy</a>
                        </li>
                        <li><a href="#">Terms of Use</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <!-- <script src="assets/jquery.min.js"></script> -->

    <!-- Bootstrap Core JavaScript -->
    <!-- <script src="assets/bootstrap.min.js"></script> -->

    <!-- Plugin JavaScript -->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

    <!-- Contact Form JavaScript -->
<!--     <script src="assets/jqBootstrapValidation.js"></script>
    <script src="assets/contact_me.js"></script>
 -->
    <!-- Theme JavaScript -->
    <%= javascript_include_tag "agency.js" %>
    <%= javascript_include_tag "footable.js" %>
<!--     
    <script src="/assets/agency.js"></script>
    <script src="/assets/footable.js" type="text/javascript"></script>
 -->
</body>
