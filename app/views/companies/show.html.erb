<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, shrink-to-fit=no, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Company Summary</title>

    <!-- Custom CSS -->

    <link href="<%= asset_path "footable.bootstrap.min.css" %>" rel="stylesheet">
    <link href="<%= asset_path "sidebarcustom.scss" %>" rel="stylesheet">
    <link href="<%= asset_path "themecustom.scss.erb" %>" rel="stylesheet">
    <link href="<%= asset_path "custom.scss.erb" %>" rel="stylesheet">
 
</head>

<body>

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <%= render "shared/customsidebar" %>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper ">
<!--           <nav class="navbar navbar-inverse">
            <div class="container">
              <a href="/" class="btn btn-default navbar-btn">Home</a>
            </div>
          </nav> -->
          <header id="customheader">
            <div class="container-fluid">
            <h5 style="text-align:left"><a href="#menu-toggle" id="menu-toggle">Show/Hide Menu</a></h5>
              <div class="intro-text">
                <div class="intro-lead-in">ARAGONÃ‰S TRANSPORTS
                </div>
                <div class="intro-heading"> 
                </div>
              </div>
            </div>
          </header>
            
            <div class="container-fluid table-responsive">
              <div class="row">
<!--                 <div class="col-lg-12">
                  <h2> Company: <%= @company.Name %> </h2>
                </div>
 -->                    <div class="col-lg-6">
                        <table class="table table-striped table-bordered" data-paging="true">
                          <thead>
                            <tr><h4> Clients </h4>
                              <th>Name</th>
                              <th data-breakpoints="xs sm md lg">Address</th>
                              <th data-breakpoints="xs sm md lg">Type</th>
                              <th data-breakpoints="xs sm md lg">NIF</th>
                              <th data-breakpoints="xs sm md lg">Verified</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% @clients.each do |client| %>
                              <tr>
                                <td><%= client.Name %></td>
                                <td><%= client.Address %></td>
                                <td><%= client.Address %></td>
                                <td><%= client.NIF %></td>
                                <td><%= client.Verified %></td>
                              </tr>
                            <% end %>
                          </tbody>
                        </table>
                    </div>
                    <div class="col-lg-6">
                        <table class="table table-striped table-bordered" data-paging="true">
                          <thead>
                            <tr><h4> Employees </h4>
                              <th>First Name</th>
                              <th>Last Name</th>
                              <th data-breakpoints="xs sm md lg">Telephone</th>
                              <th data-breakpoints="xs sm md lg">Email</th>
                              <th data-breakpoints="xs sm md lg">Designation</th>
                              <th data-breakpoints="xs sm md lg">Social Security</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% @employees.each do |emp| %>
                              <tr>
                                <td><%= emp.First_Name %></td>
                                <td><%= emp.Last_Name %></td>
                                <td><%= emp.Telephone %></td>
                                <td><%= emp.Email %></td>
                                <td><%= emp.Designation %></td>
                                <td><%= emp.Social_Sec %></td>
                              </tr>
                            <% end %>
                          </tbody>
                        </table>
                    </div>
              </div>
              <div class="row">                
                  <div class="col-lg-6">
                      <table class="table table-striped table-bordered" data-paging="true">
                        <thead>
                          <tr><h4> Drivers </h4>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Truck No</th>
                            <th data-breakpoints="xs sm md lg">Telephone</th>
                            <th data-breakpoints="xs sm md lg">Email</th>
                            <th data-breakpoints="xs sm md lg">Verified</th>
                            <th data-breakpoints="xs sm md lg">Social Security</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% @drivers.each do |driver| %>
                            <tr>
                              <td><%= driver.First_Name %></td>
                              <td><%= driver.Last_Name %></td>
                              <td><%= driver.Truck_No %></td>
                              <td><%= driver.Telephone %></td>
                              <td><%= driver.Email %></td>
                              <td><%= driver.Verified %></td>
                              <td><%= driver.Social_Sec %></td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                  </div>
                  <div class="col-lg-6">
                      <table class="table table-striped table-bordered" data-paging="true">
                        <thead>
                          <tr><h4> Shipments </h4>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Truck No</th>
                            <th data-breakpoints="xs sm md lg">Telephone</th>
                            <th data-breakpoints="xs sm md lg">Email</th>
                            <th data-breakpoints="xs sm md lg">Verified</th>
                            <th data-breakpoints="xs sm md lg">Social Security</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% @drivers.each do |driver| %>
                            <tr>
                              <td><%= driver.First_Name %></td>
                              <td><%= driver.Last_Name %></td>
                              <td><%= driver.Truck_No %></td>
                              <td><%= driver.Telephone %></td>
                              <td><%= driver.Email %></td>
                              <td><%= driver.Verified %></td>
                              <td><%= driver.Social_Sec %></td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                  </div>
              </div>
            </div>
        <!-- /#page-content-wrapper -->
        </div>
    </div>
    <!-- /#wrapper -->

    <!-- Menu Toggle Script -->
    <%= javascript_include_tag "footable.js" %>
<!--     <script src="/assets/footable.js" type="text/javascript"></script> -->

</body>
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>

    <script type="text/javascript">
      jQuery(function($){
        $('.table').footable();
        });
    </script>

</html>