<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, shrink-to-fit=no, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Company Summary</title>

    <!-- Custom CSS -->

    <%= stylesheet_link_tag 'footable.bootstrap.min', media: 'all' %>
    <%= stylesheet_link_tag 'sidebarcustom', media: 'all' %>
    <%= stylesheet_link_tag 'themecustom', media: 'all' %>
    <%= stylesheet_link_tag 'custom', media: 'all' %>
 
</head>

<body>

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <%= render "shared/customsidebar" %>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper ">
<!--           <nav class="navbar navbar-inverse">
            <div class="container">
              <a href="/" class="btn btn-default navbar-btn">Home</a>
            </div>
          </nav> -->
          <header id="customheader">
            <div class="container-fluid">
              <h5 style="text-align:left"><a href="#menu-toggle" id="menu-toggle">Mostrar/Ocultar Menú</a></h5>
              <div class="intro-text">
                <div class="intro-lead-in">ARAGONÉS TRANSPORTS</div>
                <div class="intro-heading"> </div>
              </div>
            </div>
          </header>

          <section id="manage">
            <div class="container-fluid table-responsive">
              <div class="row">
                 <div class="col-md-6">
                        <table class="table table-striped table-bordered" data-paging="true">
                          <thead>
                            <tr><h4> Clientes </h4>
                              <th>Nombre</th>
                              <th data-breakpoints="xs sm md lg">Dirección</th>
                              <th data-breakpoints="xs sm md lg">Tipo</th>
                              <th data-breakpoints="xs sm md lg">NIF</th>
                              <th data-breakpoints="xs sm md lg">Verificado</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% @clients.each do |client| %>
                              <tr>
                                <td><%= client.Name %></td>
                                <td><%= client.Address %></td>
                                <td><%= client.Address %></td>
                                <td><%= client.NIF %></td>
                                <td><%= client.Verified %></td>
                              </tr>
                            <% end %>
                          </tbody>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-striped table-bordered" data-paging="true">
                          <thead>
                            <tr><h4> Empleados </h4>
                              <th>Nombre</th>
                              <th>Apellidos</th>
                              <th data-breakpoints="xs sm md lg">Teléfono</th>
                              <th data-breakpoints="xs sm md lg">E-mail</th>
                              <th data-breakpoints="xs sm md lg">Designación</th>
                              <th data-breakpoints="xs sm md lg">Número de Seguridad Social</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% @employees.each do |emp| %>
                              <tr>
                                <td><%= emp.First_Name %></td>
                                <td><%= emp.Last_Name %></td>
                                <td><%= emp.Telephone %></td>
                                <td><%= emp.Email %></td>
                                <td><%= emp.Designation %></td>
                                <td><%= emp.Social_Sec %></td>
                              </tr>
                            <% end %>
                          </tbody>
                        </table>
                    </div>
              </div>
              <div class="row">                
                  <div class="col-md-6">
                      <table class="table table-striped table-bordered" data-paging="true">
                        <thead>
                          <tr><h4> Transportistas </h4>
                            <th>Nombre</th>
                            <th>Apellidos</th>
                            <th>Matrícula</th>
                            <th data-breakpoints="xs sm md lg">Teléfono</th>
                            <th data-breakpoints="xs sm md lg">E-mail</th>
                            <th data-breakpoints="xs sm md lg">Verificado</th>
                            <th data-breakpoints="xs sm md lg">Número de Seguridad Social</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% @drivers.each do |driver| %>
                            <tr>
                              <td><%= driver.First_Name %></td>
                              <td><%= driver.Last_Name %></td>
                              <td><%= driver.Truck_No %></td>
                              <td><%= driver.Telephone %></td>
                              <td><%= driver.Email %></td>
                              <td><%= driver.Verified %></td>
                              <td><%= driver.Social_Sec %></td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                  </div>
                  <div class="col-md-6">
                      <table class="table table-striped table-bordered" data-paging="true">
                        <thead>
                          <tr><h4> Envíos </h4>
                            <th>Estado</th>
                            <th>Nombre del Cliente</th>
                            <th>Fecha de Recogida</th>
                            <th>Fecha de Entrega</th>
                            <th data-breakpoints="xs sm md lg">Peso</th>
                            <th data-breakpoints="xs sm md lg">Dirección de Recogida</th>
                            <th data-breakpoints="xs sm md lg">Dirección de Entrega</th>
                            <th data-breakpoints="xs sm md lg">Tipo de carga</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% @shipments.each do |shipment| %>
                            <tr>
                              <td><%= shipment.Status %></td>
                              <td><%= shipment.Client_Name %></td>
                              <td><%= shipment.Pickup_Date %></td>
                              <td><%= shipment.Dropoff_Date %></td>
                              <td><%= shipment.Weight %></td>
                              <td><%= shipment.Pickup_Location %></td>
                              <td><%= shipment.Dropoff_Location %></td>
                              <td><%= shipment.Cargo_Type %></td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                  </div>
              </div>
            </div>
          </section>
        <!-- /#page-content-wrapper -->
        </div>
    </div>
    <!-- /#wrapper -->

    <!-- Menu Toggle Script -->
    <%= javascript_include_tag "footable.js" %>
<!--     <script src="/assets/footable.js" type="text/javascript"></script> -->

</body>
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>

    <script type="text/javascript">
      jQuery(function($){
        $('.table').footable();
        });
    </script>

</html>